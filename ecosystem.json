{
  "apps": [
    {
      "name": "qunaer",
      "script": "app.js",
      "watch": true,
      "ignore_watch": [
        "node_modules",
        "logs"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "node_admin",
      "host": [
        "47.96.137.151"
      ],
      "port": "22000",
      "ref": "origin/master",
      "repo": "git@github.com:xiaolizixiaolizi/node_qunaer.git",
      "path": "/www/qunaer/production",
      "ssh_options": "StrictHostKeyChecking=no",
      "post-deploy": "npm install --registry=https://registry.npm.taobao.org && pm2 startOrRestart ecosystem.json",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}